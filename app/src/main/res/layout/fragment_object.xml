<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ObjectFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/object_recyclerview_folder"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layoutManager = "androidx.recyclerview.widget.GridLayoutManager"/>
<!--        app:spanCount="2"  />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/object_recyclerview_object"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layoutManager = "androidx.recyclerview.widget.GridLayoutManager"/>
<!--        app:spanCount="4"  />-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->


    <!--        object folder list -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
<!--            //원래 height 314-->


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:id="@+id/objectList1"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/lottemart"
                    android:textColor="#ffffff"
                    android:text="object list 1" />

            </TableRow>


        </TableLayout>

    <!--        object list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:orientation="vertical"
        android:background="#bdbdbd">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/object1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@drawable/ic_store_main_icon"/>

            <ImageView
                android:id="@+id/object2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

        </TableRow>

    </TableLayout>

    </LinearLayout>


</LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addObjectList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add_folder"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/add_photo"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"/>

</FrameLayout>